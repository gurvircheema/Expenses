<h1 class="text-center">Log in</h1>
<%= form_tag sessions_path, class: "form-horizontal" do %>

	<div class="form-group">
		<div class="col-sm-2 control-label"><%= label_tag :email %></div>
		<div class="col-sm-10"><%= text_field_tag :email %></div>	
	</div>
	<div class="form-group">
		<div class="col-sm-2 control-label"><%= label_tag :password %></div>
		<div class="col-sm-10"><%= password_field_tag :password %></div>	
	</div>
	<div class="form-group">
		<div class="col-sm-offset-2 col-sm-10">
	      <div><%= submit_tag "Log in", class:"btn btn-default"%>
	      		<%= link_to "Back" ,root_url, class:"btn btn-default"%></div>
	    </div>
	</div>
<% end %>

