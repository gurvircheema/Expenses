<h1 class="col-sm-offset-2">Log in</h1></br>
<%= form_tag sessions_path, class: "form-horizontal" do %>
	

	<div class="form-group row">
		<%= label_tag :email ,"Email", class:"col-sm-2 control-label"%>
		<div class="col-sm-4"><%= text_field_tag :email,nil, class:"control-label" %></div>	
	</div>
	<div class="form-group row">
		<%= label_tag :password,"Password", class:"col-sm-2 control-label" %>
		<div class="col-sm-4"><%= password_field_tag :password ,nil,class:"control-label"%></div>	
	</div>
	<div class="form-group row">
		<div class="col-sm-offset-2 col-sm-4">
	      <div><%= submit_tag "Log in", class:"btn btn-default btn-"%>
	      		<%= link_to "Back" ,root_url, class:"btn btn-default"%></div>
	    </div>
	</div>
<% end %>

